# the upstream component nginx needs to connect to
upstream django {
     server unix:/home/zhouxin/zhouxin/codedir/proxypool/proxypool.sock; # for a file socket
    # server 47.93.60.71:8080; # for a web port socket (we'll use this first)
}

# configuration of the server
server {
    # the port your site will be served on
    listen      3031;
    # the domain name it will serve for
    server_name 47.93.61.70; # substitute your machine's IP address or FQDN
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste

    # Django media
    # location /media  {
    #    alias /path/to/your/mysite/media;  # your Django project's media files - amend as required
    #}

    location /static {
        alias /home/zhouxin/zhouxin/codedir/proxypool/static; # your Django project's static files - amend as required
    }

    # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  django;
        include     /home/zhouxin/zhouxin/codedir/proxypool/uwsgi_params; # the uwsgi_params file you installed
    }
}
